<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       		http://www.springframework.org/schema/beans/spring-beans-4.3.xsd ">

	<!-- 简单例子 -->
	<bean id="mqManager" class="zjq.demo.mq.MqManager">
		<property name="nameAddrs" value="${rocketmq.namesrv.addr}" />
	</bean>
	
	<!-- 事件驱动模式，以集群消费者为例 -->
	<bean id="consumer" class="zjq.demo.rocketmq.consumer.ClusterConsumer" init-method="init">
		<property name="group" value="${rocketmq.group}" />
		<property name="nameAddrs" value="${rocketmq.namesrv.addr}" />
		<property name="hold" >
			<map>
				<entry key="${rocketmq.topic.a}" value-ref="messageListener2" />
				<entry key="${rocketmq.topic.b}" value-ref="messageListener3" />
			</map>
		</property>
	</bean>
	<bean id="messageListener2" class="zjq.demo.rocketmq.demoListener.MessageListener2"/>
	<bean id="messageListener3" class="zjq.demo.rocketmq.demoListener.MessageListener3"/>
</beans>